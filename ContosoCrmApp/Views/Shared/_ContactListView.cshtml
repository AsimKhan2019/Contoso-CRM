@model IEnumerable<ContosoCrm.Common.Models.Contact>

<h2>@ViewBag.Area</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 card">
            <div class="card-body">
                <h4 class="card-title">@item.FirstName @item.LastName</h4>
                <h5 class="card-subtitle mb-2 text-muted">@item.Company</h5>
                <h6 class="card-subtitle mb-2 text-muted">@item.ContactType</h6>
                <h6 class="card-subtitle mb-2 text-muted">@item.Phone</h6>
                <h6 class="card-subtitle mb-2 text-muted">@item.Email</h6>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </div>
        </div>
    }
</div>


