<h1 class="display-4">All Contacts</h1>

<div class="row">
    @foreach (var contact in Model)
    {
        <div class="col-md-4 card">
            <div class="card-body">
                <h4 class="card-title">@contact.FirstName @contact.LastName</h4>
                <h5 class="card-subtitle mb-2 text-muted">@contact.Company</h5>
                <h6 class="card-subtitle mb-2 text-muted">@contact.ContactType</h6>
                <h6 class="card-subtitle mb-2 text-muted">@contact.Phone</h6>
                <h6 class="card-subtitle mb-2 text-muted">@contact.Email</h6>
                @*<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="#" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a>*@
            </div>
        </div>
    }
</div>

